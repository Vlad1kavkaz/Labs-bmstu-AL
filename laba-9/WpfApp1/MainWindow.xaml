<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="cityListBox" Grid.Row="0" Margin="10"/>

        <Button x:Name="getWeatherButton" Grid.Row="1" Content="Получить погоду" Click="GetWeatherButton_Click" Margin="10"/>
    </Grid>
</Window>
